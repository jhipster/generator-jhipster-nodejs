/*
 * This is the application and entity model for university elearning
 * default values: https://www.jhipster.tech/jdl/#annexes
 * Use "jhipster import-jdl model-name.jdl --blueprints nodejs" to generate the entire application
 * Use jhipster 6.x (example 6.6.0)
 * relationship info: https://www.jhipster.tech/managing-relationships/
 */

application {
	config {
		applicationType monolith,
		baseName monolithReactJwtSqlJdlApp,
		packageName com.jhipster.node,
		serverPort 8081,
		cacheProvider no,
		enableHibernateCache false,
		authenticationType jwt,
		databaseType sql,
		prodDatabaseType mssql,
		serviceDiscoveryType false,
		clientPackageManager npm,
		useSass true,
		skipUserManagement false,
		enableTranslation false,
		clientFramework react
	}
	entities *
}

// JDL definition entity for application

/*

enum Gender {
MALE,
FEMALE
}

enum UserType {
STUDENT,
TEACHER
}
 */

entity DemetraUser {
	gender String required,
	address String required,
	borndate LocalDate required,
	cf String required unique,
	usertype String required,
	profileimage ImageBlob
}

entity SingleCourse {
	title String required unique,
	description String,
	isnotonlyfordegree Boolean required,
	cfu Integer,
	courseimage Blob,
        amount BigDecimal
}

entity Activity {
	name UUID unique,
	description String,
        number Double,
	creationtime Instant

}

relationship OneToOne {
	Activity to SingleCourse
}

relationship ManyToMany {

	DemetraUser {
		coursetitle(title)
	}
	to SingleCourse {
		cfstudent(cf)
	},
}

relationship OneToMany {

	DemetraUser {
		singlecourseteacher
	}
	to SingleCourse {
		cfteacher(cf)required
	}

}
